<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-4 shadow-sm border-0">
      <h3 class="mb-2">Profile</h3>
      <p class="text-muted">Logged in as: <b><%= username %></b></p>

      <% if (msg) { %>
        <div class="alert alert-success"><%= msg %></div>
      <% } %>
      <% if (err) { %>
        <div class="alert alert-danger"><%= err %></div>
      <% } %>
<a class="btn btn-outline-primary" href="/profile/salary">Edit Salary</a>

      <h5 class="mt-3">Change Password</h5>
      <form method="POST" action="/profile/change-password">
        <input class="form-control mb-2" type="password" name="oldPassword" placeholder="Old password" required>
        <input class="form-control mb-2" type="password" name="newPassword" placeholder="New password" required>
        <input class="form-control mb-3" type="password" name="confirmPassword" placeholder="Confirm new password" required>
        <button class="btn btn-primary w-100">Update</button>
      </form>
    </div>
  </div>
</div>

</div>
</body></html>
<%- include('partials/footer') %>
