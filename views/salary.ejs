<%- include('partials/header') %>

<div class="container mt-5">
  <div class="card p-4 shadow-sm border-0">
    <h3 class="mb-3">Monthly Salary</h3>

    <% if (err) { %>
      <div class="alert alert-danger"><%= err %></div>
    <% } %>

    <% if (msg) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% } %>

    <form method="POST" action="/profile/salary" class="row g-3 align-items-end">
      <div class="col-md-6">
        <label class="form-label">Your salary (per month)</label>
        <input
          class="form-control"
          type="number"
          name="monthlySalary"
          min="0"
          step="1"
          value="<%= monthlySalary ?? 0 %>"
          required
        />
      </div>

      <div class="col-md-3">
        <button class="btn btn-primary w-100">Save</button>
      </div>

      <div class="col-md-3">
        <a href="/dashboard" class="btn btn-outline-secondary w-100">Back</a>
      </div>
    </form>

    <hr class="my-4">

    <div class="alert alert-info mb-0">
      Current saved salary: <b><%= monthlySalary ?? 0 %></b>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
